    /**
     * 
     */
    public Programa() {
    }
    
    /**
     * 
     */
    public void iniciar()
    {        
            char op = Utilidades.menu();    
            switch (op) {
                case '1':
                    
                case '2':

                case '3':
                    //SALIR
                    System.exit( 0 );
                    break;
                default:
                   Utilidades.menu(); 
            }         
        
    }
    
    
    
}
